<h1>Editando: {{user.name}}</h1>
<form class="form" action="/users/update" method="POST">
  <input type="hidden" value={{user.id}} name="id">
  <div class="form-control">
    <label for="name">Name:</label>
    <input type="text" name="name" placeholder="Digite o nome do usuário" value={{user.name}}>
  </div>
  <div class="form-control">
    <label for="occupation">Ocupação:</label>
    <input type="text" name="occupation" placeholder="Digite a profissão" value={{user.occupation}}>
  </div>
    <div class="form-control form-checkbox">
      {{#if user.newsletter}}
        <input type="checkbox" name="newslatter" checked>
      {{else}}
        <input type="checkbox" name="newslatter" >
      {{/if}}
    <label for="newslatter">Enviar promoções?</label>
  </div>
  <input type="submit" value="Cadastrar">
</form>
<div class="adress-container">
  <h2>Endereços:</h2>
  <form action="/adress/create" method="POST">
    <input type="hidden" name="UserId" value="{{user.id}}">
    <div class="form-control">
      <label for="street">Rua:</label>
      <input type="text" name="street" placeholder="Digite a rua">
    </div>
    <div class="form-control">
      <label for="number">Número:</label>
      <input type="text" name="number" placeholder="Digite o número de sua residência">
    </div>
    <div class="form-control">
      <label for="city">Cidade:</label>
      <input type="text" name="city" placeholder="Digite a cidade">
    </div>
    <input type="submit" value="Incluir Endereço">
  </form>
  <div class="adress-list">
    <h2>Lista de endereços:</h2>
    {{#each user.Adresses}}
      <div>{{this.id}} - {{this.street}} - {{this.number}} - {{this.city}} 
        <form action="/adrees/delete" method="POST">
          <input type="hidden" value="{{this.id}}" name="id">
          <input type="hidden" value="{{this.UserId}}" name="UserId">
          <input type="submit" value="Remover">
        </form>
      </div>
    {{/each}}
  </div>
</div>